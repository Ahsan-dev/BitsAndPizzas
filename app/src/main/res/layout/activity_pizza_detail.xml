<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PizzaDetailActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/pizzaTitleId"
                android:text="Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_alignParentLeft="true"
                android:layout_margin="5dp" />
            <ImageView
                android:id="@+id/pizzaImageId"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:layout_below="@id/pizzaTitleId"
                android:src="@drawable/americana"
                android:scaleType="centerCrop"
                android:adjustViewBounds="true"
                />
            <TextView
                android:textColor="#0C3053"
                android:id="@+id/pizzadetailText"
                android:layout_below="@id/pizzaImageId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:layout_margin="10dp"
                android:textSize="25sp"
                />





        </RelativeLayout>






    </ScrollView>

</RelativeLayout>